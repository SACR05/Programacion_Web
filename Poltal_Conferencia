    <script>
        // Variables globales
        let countdownInterval;
        let registrationData = {};

        // Función para mostrar secciones
        function showSection(sectionId) {
            // Ocultar todas las secciones
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => section.classList.remove('active'));

            // Mostrar la sección seleccionada
            document.getElementById(sectionId).classList.add('active');

            // Actualizar navegación activa
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => link.classList.remove('active'));
            event.target.classList.add('active');

            // Inicializar canvas si es la sección de ponentes
            if (sectionId === 'speakers') {
                initializeMap();
            }
        }

        // Cuenta regresiva
        function startCountdown() {
            const eventDate = new Date('2025-06-15T09:00:00').getTime();
            
            countdownInterval = setInterval(function() {
                const now = new Date().getTime();
                const distance = eventDate - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');

                if (distance < 0) {
                    clearInterval(countdownInterval);
                    document.querySelector('.countdown').innerHTML = '<h2>¡El evento ha comenzado!</h2>';
                }
            }, 1000);
        }

        // Inicializar mapa interactivo
        function initializeMap() {
            const canvas = document.getElementById('mapCanvas');
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            
            // Limpiar canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Dibujar mapa base
            ctx.fillStyle = '#e8f4f8';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Dibujar calles principales
            ctx.strokeStyle = '#ccc';
            ctx.lineWidth = 3;
            ctx.beginPath();
            ctx.moveTo(0, 200);
            ctx.lineTo(canvas.width, 200);
            ctx.moveTo(200, 0);
            ctx.lineTo(200, canvas.height);
            ctx.moveTo(400, 0);
            ctx.lineTo(400, canvas.height);
            ctx.stroke();
            
            // Dibujar ubicación del evento
            ctx.fillStyle = '#667eea';
            ctx.beginPath();
            ctx.arc(300, 150, 30, 0, 2 * Math.PI);
            ctx.fill();
            
            // Texto de ubicación
            ctx.fillStyle = 'white';
            ctx.font = 'bold 12px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('🏢', 300, 155);
            
            // Etiqueta
            ctx.fillStyle = '#333';
            ctx.font = '14px Arial';
            ctx.fillText('Palacio de Congresos', 300, 120);
            ctx.fillText('Madrid', 300, 190);
            
            // Añadir interactividad
            canvas.onclick = function(e) {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                // Verificar si se hizo clic en el marcador
                const distance = Math.sqrt(Math.pow(x - 300, 2) + Math.pow(y - 150, 2));
                if (distance <= 30) {
                    alert('📍 Palacio de Congresos de Madrid\n🚇 Metro: Santiago Bernabéu (L10)\n🚌 Autobuses: 14, 27, 40, 147, 150\n🚗 Parking disponible en el recinto');
                }
            };
            
            canvas.style.cursor = 'pointer';
        }

        // Registro a actividades
        function registerActivity(day) {
            const activities = {
                'day1': 'Día 1 - IA y Machine Learning',
                'day2': 'Día 2 - Cloud y DevOps', 
                'day3': 'Día 3 - Ciberseguridad'
            };
            
            alert(`✅ Te has inscrito exitosamente a las actividades del ${activities[day]}\n\nRecibirás un email de confirmación con los detalles.`);
            
            // Simular actualización de progreso
            const progressBars = document.querySelectorAll('progress');
            progressBars.forEach(bar => {
                if (bar.value < bar.max) {
                    bar.value += 1;
                }
            });
        }

        // Actualizar precio según categoría
        function updatePrice() {
            const category = document.getElementById('category').value;
            const priceOutput = document.getElementById('price-output');
            const categoryOutput = document.getElementById('category-output');
            
            const prices = {
                'student': { price: '€99', name: 'Estudiante' },
                'professional': { price: '€299', name: 'Profesional' },
                'enterprise': { price: '€499', name: 'Empresarial' },
                'speaker': { price: 'Gratuito', name: 'Ponente' }
            };
            
            if (prices[category]) {
                priceOutput.textContent = prices[category].price;
                categoryOutput.textContent = prices[category].name;
            } else {
                priceOutput.textContent = '€0';
                categoryOutput.textContent = 'No seleccionada';
            }
        }

        // Actualizar output de experiencia
        function updateExperienceOutput() {
            const experience = document.getElementById('experience').value;
            const output = document.getElementById('experience-output');
            output.textContent = `${experience} años`;
        }

        // Manejar envío de formulario de actividades
        document.getElementById('activityForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            alert(`✅ Inscripción exitosa!\n\nActividad: ${data.activity}\nParticipante: ${data['participant-name']}\nNivel: ${data['experience-level']}\n\nRecibirás un email de confirmación.`);
            
            e.target.reset();
        });

        // Manejar envío de formulario de registro
        document.getElementById('registrationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            registrationData = Object.fromEntries(formData.entries());
            
            // Obtener intereses seleccionados
            const interests = [];
            document.querySelectorAll('input[name="interests"]:checked').forEach(checkbox => {
                interests.push(checkbox.value);
            });
            registrationData.interests = interests;
            
            // Mostrar confirmación
            const category = document.getElementById('category').selectedOptions[0].textContent;
            const price = document.getElementById('price-output').textContent;
            
            alert(`🎉 ¡Registro completado exitosamente!\n\nNombre: ${registrationData['full-name']}\nEmail: ${registrationData.email}\nCategoría: ${category}\nPrecio: ${price}\n\nRecibirás un email de confirmación con todos los detalles y el enlace de pago.`);
            
            // Limpiar formulario
            e.target.reset();
            updatePrice();
            updateExperienceOutput();
        });

        // Inicializar página
        document.addEventListener('DOMContentLoaded', function() {
            startCountdown();
            updateExperienceOutput();
            
            // Simular carga de datos en tiempo real
            setTimeout(() => {
                const meters = document.querySelectorAll('meter');
                meters.forEach(meter => {
                    const currentValue = parseInt(meter.value);
                    const newValue = Math.min(currentValue + Math.floor(Math.random() * 10), meter.max);
                    meter.value = newValue;
                });
            }, 3000);
        });

        // Efectos adicionales
        document.querySelectorAll('button').forEach(button => {
            button.addEventListener('click', function(e) {
                // Efecto de ondas al hacer clic
                const ripple = document.createElement('span');
                ripple.style.position = 'absolute';
                ripple.style.borderRadius = '50%';
                ripple.style.background = 'rgba(255,255,255,0.6)';
                ripple.style.transform = 'scale(0)';
                ripple.style.animation = 'ripple 0.6s linear';
                ripple.style.left = (e.clientX - e.target.offsetLeft - 10) + 'px';
                ripple.style.top = (e.clientY - e.target.offsetTop - 10) + 'px';
                ripple.style.width = ripple.style.height = '20px';
                
                e.target.style.position = 'relative';
                e.target.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        });

        // Agregar animación CSS para el efecto ripple
        const style = document.createElement('style');
        style.textContent = `
            @keyframes ripple {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
